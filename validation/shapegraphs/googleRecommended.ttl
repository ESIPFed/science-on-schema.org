@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix ex: <http://www.example.org/schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix schema: <http://schema.org/> .


ex:AltNameShape
    a sh:NodeShape ;
    sh:property [
        sh:path <http://schema.org/alternateName>;
        sh:minCount 1 ;
        sh:nodeKind sh:Literal ;
        sh:not [
           sh:nodeKind sh:IRI ;
     ] ;
    ] ;
    sh:message "Testing the alt name is a literal and NOT an IRI"@en ;
    sh:targetClass <http://schema.org/Dataset> .

ex:CreatorShape
    a sh:NodeShape ;
    sh:property [
        sh:path <http://schema.org/creator> ;
 sh:or (
		[
			sh:class schema:Person ;
		]
		[
			sh:class schema:Organization ;
		]
	) ;
        sh:minCount 1 ;

    ] ;
    sh:targetClass <http://schema.org/DataSet> .

ex:CitationShape
    a sh:NodeShape ;
    sh:property [
        sh:path <http://schema.org/citation>;
	    sh:maxCount 1 ;
        sh:minCount 1 ;
        sh:or (
		[
			sh:nodeKind sh:Literal ;
		]
		[
			sh:class schema:CreativeWork ;
		]
	) ;
    ] ;
    sh:message "Needs to be a Text or CreativeWork"@en ;

    sh:targetClass <http://schema.org/Dataset> .

ex:IdentifierShape
    a sh:NodeShape ;
    sh:property [
        sh:path <http://schema.org/identifier>;
	    sh:maxCount 1 ;
        sh:minCount 1 ;
          sh:or (
		[
			sh:nodeKind sh:Literal ;
		]
		[
			sh:class schema:URL ;
		]
        [
			sh:class schema:PropertyValue ;
		]
          );
    ] ;
    sh:message "Needs to be a URL, Text or PropertyValue"@en ;
    sh:targetClass <http://schema.org/Dataset> .

